{
  "name": "popcorn-monorepo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:desktop": "npm run dev -w apps/desktop",
    "dev:electron": "npm run dev:electron -w apps/desktop",
    "dev:web": "npm run dev -w apps/web",
    "build:desktop": "npm run build -w apps/desktop",
    "build:web": "npm run build -w apps/web",
    "lint": "npm run lint -w apps/desktop && npm run lint -w apps/web"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}