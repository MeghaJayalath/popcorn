{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "outDir": "dist-electron",
        "rootDir": "electron",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true, // allowing default imports
        "moduleResolution": "node",
        "skipLibCheck": true
    },
    "include": [
        "electron/**/*",
        "src/types/**/*"
    ]
}