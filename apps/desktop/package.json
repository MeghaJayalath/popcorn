{
  "name": "@popcorn/desktop",
  "private": true,
  "version": "1.0.29",
  "description": "Stream movies and TV shows",
  "author": "Popcorn Team",
  "main": "dist-electron/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/MeghaJayalath/popcorn.git"
  },
  "scripts": {
    "dev": "concurrently -k \"vite\" \"npm run dev:electron\"",
    "dev:electron": "tsc -p tsconfig.electron.json && wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "cross-env ARCH_SUFFIX=\"\" npm run build:prepare && cross-env ARCH_SUFFIX=\"\" electron-builder",
    "build:prepare": "tsc -b && vite build && npm run build:electron",
    "build:mac": "npm run build:mac:x64 && npm run build:mac:arm64",
    "build:mac:x64": "npm run build:prepare && cross-env ARCH_SUFFIX=/x64 electron-builder --mac --x64",
    "build:mac:arm64": "npm run build:prepare && cross-env ARCH_SUFFIX=/arm64 electron-builder --mac --arm64",
    "build:electron": "tsc -p tsconfig.electron.json",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@types/semver": "^7.7.1",
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "firebase": "^12.7.0",
    "lottie-react": "^2.4.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-player": "^3.4.0",
    "semver": "^7.7.3",
    "torrent-search-api": "^2.1.4",
    "webtorrent": "^1.9.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/torrent-search-api": "^2.0.3",
    "@types/webtorrent": "^0.110.1",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "28.3.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.popcorn.app",
    "productName": "Popcorn",
    "directories": {
      "output": "dist${env.ARCH_SUFFIX}"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json",
      "public/**/*",
      ".env",
      {
        "from": "../../node_modules",
        "to": "node_modules",
        "filter": [
          "!**/@popcorn/**",
          "!**/app-builder-bin/**",
          "!**/.app-builder-bin*/**",
          "!**/electron/**",
          "!**/electron-builder/**",
          "!**/electron-builder-squirrel-windows/**",
          "!**/electron-publish/**",
          "!**/electron-winstaller/**",
          "!**/typescript/**",
          "!**/vite/**",
          "!**/eslint/**",
          "!**/@eslint/**",
          "!**/@vitejs/**",
          "!**/@types/**",
          "!**/@mux/**",
          "!**/@esbuild/**",
          "!**/@rollup/**",
          "!**/firebase/**",
          "!**/@firebase/**",
          "!**/react/**",
          "!**/react-dom/**",
          "!**/react-player/**",
          "!**/dashjs/**",
          "!**/hls.js/**",
          "!**/concurrently/**",
          "!**/cross-env/**",
          "!**/wait-on/**",
          "!**/globals/**",
          "!**/typescript-eslint/**",
          "!**/eslint-plugin-react-hooks/**",
          "!**/eslint-plugin-react-refresh/**",
          "!**/.bin/**"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.png",
      "category": "public.app-category.entertainment"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}